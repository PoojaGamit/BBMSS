@model BBMSDATA1.Models.BloodStock

@{
    ViewData["Title"] = "UpdateBloodstock";
}


<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="UpdateBloodstock" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <!-- Hidden fields that should not be modified by user -->
            <input type="hidden" asp-for="StockId" />
            <input type="hidden" asp-for="BloodBankId" />
            <input type="hidden" asp-for="UpdatedBy" />
            <input type="hidden" asp-for="LastUpdated" />
            <input type="hidden" asp-for="IsActive"/>
            <div class="form-group mb-3">
                <label asp-for="ComponentTypeId" class="control-label">ComponentTypeId</label>
                <input asp-for="ComponentTypeId" class="form-control" />
                <span asp-validation-for="ComponentTypeId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="BloodGroupId" class="control-label">BloodGroupId</label>
                <input asp-for="BloodGroupId" class="form-control" />
                <span asp-validation-for="BloodGroupId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Quantity" class="control-label">Quantity</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ExpiryDate" class="control-label">Expiry Date</label>
                <input asp-for="ExpiryDate" type="date" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="GetByBloodBankId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>