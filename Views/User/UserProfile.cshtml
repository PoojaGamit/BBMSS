@model BBMSDATA1.Models.Users
@{
    ViewData["Title"] = "User Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard - BloodLink</title>
    <style>
        :root {
            --primary: #4a90e2;
            --secondary: #2ecc71;
            --danger: #e74c3c;
            --warning: #f39c12;
            --dark: #2c3e50;
            --light: #ecf0f1;
            --background: #f4f6f7;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: var(--background);
            color: var(--dark);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background-color: var(--primary);
            color: white;
            padding: 15px 0;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

            .header h1 {
                margin: 0;
                padding: 0 20px;
            }

        .user-info {
            display: flex;
            align-items: center;
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .user-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background-color: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            margin-right: 20px;
        }

        .user-details {
            flex-grow: 1;
        }

            .user-details h2 {
                margin: 0 0 10px 0;
                color: var(--dark);
            }

            .user-details p {
                margin: 5px 0;
                color: #666;
            }

        .blood-type {
            display: inline-block;
            padding: 5px 15px;
            background-color: var(--primary);
            color: white;
            border-radius: 20px;
            font-weight: bold;
            margin-top: 10px;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .dashboard-card {
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

            .dashboard-card h3 {
                margin-top: 0;
                color: var(--dark);
                border-bottom: 1px solid var(--light);
                padding-bottom: 10px;
            }

        .stat-cards {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }

        .stat-card {
            background-color: white;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            transition: transform 0.2s;
        }

            .stat-card:hover {
                transform: translateY(-5px);
            }

        .stat-number {
            font-size: 32px;
            font-weight: bold;
            margin: 10px 0;
            color: var(--primary);
        }

        .stat-label {
            color: #666;
            font-size: 14px;
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
        }

            .data-table th, .data-table td {
                padding: 10px;
                text-align: left;
                border-bottom: 1px solid var(--light);
            }

            .data-table th {
                background-color: var(--light);
                color: var(--dark);
            }

        .badge {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: bold;
        }

        .badge-pending {
            background-color: var(--warning);
            color: white;
        }

        .badge-approved {
            background-color: var(--secondary);
            color: white;
        }

        .badge-rejected {
            background-color: var(--danger);
            color: white;
        }

        .btn {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 4px;
            background-color: var(--primary);
            color: white;
            text-decoration: none;
            font-weight: bold;
            cursor: pointer;
            border: none;
            transition: background-color 0.2s;
        }

            .btn:hover {
                background-color: #3a7bc8;
            }

        .btn-outlined {
            background-color: transparent;
            border: 1px solid var(--primary);
            color: var(--primary);
        }

            .btn-outlined:hover {
                background-color: var(--primary);
                color: white;
            }

        .nearby-map {
            height: 300px;
            background-color: var(--light);
            border-radius: 8px;
            margin-bottom: 20px;
        }

       
    </style>
</head>
<body>
    <div class="header">
        <div class="container">
            <h1>BloodLink - User Dashboard</h1>
        </div>
    </div>

    <div class="container">
        <div class="user-info">
            <div class="user-avatar">
                @Model.FullName.Substring(0, 1)
            </div>
            <div class="user-details">
                <h2>@Model.FullName</h2>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Phone:</strong> @(Model.PhoneNumber ?? "Not provided")</p>
                <p><strong>Location:</strong> @(Model.Address ?? "Not provided"), @(ViewBag.StateName ?? ""), @(Model.PinCode ?? "")</p>
                @if (Model.BloodGroupId != null)
                {
                    <div class="blood-type">@ViewBag.BloodGroupName</div>
                }
            </div>
        </div>

        <div class="stat-cards">
            <div class="stat-card">
                <div class="stat-number">@ViewBag.TotalDonations</div>
                <div class="stat-label">Total Donations</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">@ViewBag.PendingRequests</div>
                <div class="stat-label">Pending Requests</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">@ViewBag.UpcomingCamps</div>
                <div class="stat-label">Upcoming Camps</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">@ViewBag.DaysSinceLastDonation</div>
                <div class="stat-label">Days Since Last Donation</div>
            </div>
        </div>

        <div class="dashboard-grid">
            <div class="dashboard-card">
                <h3>My Donation History</h3>
                @if (ViewBag.DonationHistory != null && ViewBag.DonationHistory.Count > 0)
                {
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Blood Bank</th>
                                <th>Type</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var donation in ViewBag.DonationHistory)
                            {
                                <tr>
                                    <td>@donation.DonationDate.ToString("MMM dd, yyyy")</td>
                                    <td>@donation.BloodBankName</td>
                                    <td>@donation.DonationTypeName</td>
                                    <td>
                                        @if (donation.Status == "Pending")
                                        {
                                            <span class="badge badge-pending">Pending</span>
                                        }
                                        else if (donation.Status == "Approved")
                                        {
                                            <span class="badge badge-approved">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-rejected">Rejected</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No donation history available.</p>
                }
                <div style="margin-top: 15px; text-align: right;">
                    <a href="/Donations/Schedule" class="btn">Schedule Donation</a>
                </div>
            </div>

            <div class="dashboard-card">
                <h3>My Blood Requests</h3>
                @if (ViewBag.BloodRequests != null && ViewBag.BloodRequests.Count > 0)
                {
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Blood Group</th>
                                <th>Quantity</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in ViewBag.BloodRequests)
                            {
                                <tr>
                                    <td>@request.RequestDate.ToString("MMM dd, yyyy")</td>
                                    <td>@request.BloodGroupName</td>
                                    <td>@request.RequiredQuantity units</td>
                                    <td>
                                        @if (request.Status == "Pending")
                                        {
                                            <span class="badge badge-pending">Pending</span>
                                        }
                                        else if (request.Status == "Approved")
                                        {
                                            <span class="badge badge-approved">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-rejected">Rejected</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No blood requests available.</p>
                }
                <div style="margin-top: 15px; text-align: right;">
                    <a href="/BloodRequest/Create" class="btn">Create Request</a>
                </div>
            </div>

            <div class="dashboard-card">
                <h3>Upcoming Blood Camps</h3>
                @if (ViewBag.UpcomingCampsList != null && ViewBag.UpcomingCampsList.Count > 0)
                {
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Date</th>
                                <th>Location</th>
                                @* <th>Action</th> *@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var camp in ViewBag.UpcomingCampsList)
                            {
                                <tr>
                                    <td>@camp.Name</td>
                                    <td>@camp.Date.ToString("MMM dd, yyyy")</td>
                                    <td>@camp.Location</td>
                                    @* <td>
                                        @if (!camp.IsRegistered)
                                        {
                                            <a href="/CampRegistrations/Register/@camp.CampId" class="btn btn-outlined">Register</a>
                                        }
                                        else
                                        {
                                            <span class="badge badge-approved">Registered</span>
                                        }
                                    </td> *@
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No upcoming blood camps available.</p>
                }
            </div>

            <div class="dashboard-card">
                <h3>Notifications</h3>
                @if (ViewBag.Notifications != null && ViewBag.Notifications.Count > 0)
                {
                    <div style="max-height: 300px; overflow-y: auto;">
                        @foreach (var notification in ViewBag.Notifications)
                        {
                            <div style="padding: 10px 0; border-bottom: 1px solid var(--light);">
                                <h4 style="margin: 0 0 5px 0;">@notification.Title</h4>
                                <p style="margin: 0; color: #666; font-size: 14px;">@notification.Message</p>
                                <div style="font-size: 12px; color: #999; margin-top: 5px;">
                                    @notification.StartDate.ToString("MMM dd, yyyy") - @notification.EndDate.ToString("MMM dd, yyyy")
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p>No notifications available.</p>
                }
            </div>
        </div>
</div>
