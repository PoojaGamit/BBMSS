@model BBMSDATA1.Models.Users
@{
    ViewData["Title"] = "User Dashboard";
}

<style>
    :root {
        --primary: #4a90e2;
        --secondary: #2ecc71;
        --danger: #e74c3c;
        --warning: #f39c12;
        --info: #3498db;
        --dark: #2c3e50;
        --light: #ecf0f1;
        --background: #f4f6f7;
        --sidebar: #2c3e50;
        --card-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    body {
        background-color: var(--background);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .dashboard-container {
        display: grid;
        grid-template-columns: 250px 1fr;
        min-height: 100vh;
    }

    /* Sidebar Styles */
    .sidebar {
        background-color: var(--sidebar);
        color: white;
        padding: 20px 0;
    }

    .sidebar-profile {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .profile-avatar {
        width: 80px;
        height: 80px;
        background-color: var(--primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .sidebar-profile h3 {
        margin: 10px 0 5px;
        font-size: 18px;
    }

    .sidebar-profile p {
        margin: 0;
        font-size: 14px;
        opacity: 0.8;
    }

    .sidebar-menu {
        padding: 15px;
    }

    .menu-item {
        display: flex;
        align-items: center;
        padding: 12px 15px;
        border-radius: 6px;
        margin-bottom: 5px;
        cursor: pointer;
        transition: background-color 0.2s;
        color: white;
        text-decoration: none;
    }

        .menu-item:hover, .menu-item.active {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .menu-item i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }

    /* Main Content Styles */
    .main-content {
        padding: 25px;
    }

    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .dashboard-title h1 {
        margin: 0;
        font-size: 24px;
        color: var(--dark);
    }

    .notification-bell {
        position: relative;
        margin-right: 15px;
        cursor: pointer;
    }

    .notification-count {
        position: absolute;
        top: -8px;
        right: -8px;
        background-color: var(--danger);
        color: white;
        border-radius: 50%;
        width: 18px;
        height: 18px;
        font-size: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .dashboard-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .dashboard-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: var(--card-shadow);
        padding: 20px;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .card-title {
        font-size: 18px;
        margin: 0;
        color: var(--dark);
    }

    /* Appointments Styles */
    .appointment-list {
        margin-top: 15px;
    }

    .appointment-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid var(--light);
    }

        .appointment-item:last-child {
            border-bottom: none;
        }

    .appointment-details {
        flex: 1;
    }

    .appointment-title {
        margin: 0 0 5px;
        font-weight: 600;
    }

    .appointment-time {
        color: #777;
        font-size: 14px;
    }

    .appointment-status {
        display: inline-block;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 600;
        margin-left: 10px;
    }

    .status-confirmed {
        background-color: var(--secondary);
        color: white;
    }

    .status-pending {
        background-color: var(--warning);
        color: white;
    }

    .status-completed {
        background-color: var(--dark);
        color: white;
    }

    .status-cancelled {
        background-color: var(--danger);
        color: white;
    }

    /* Notifications Styles */
    .notification-list {
        margin-top: 15px;
    }

    .notification-item {
        padding: 12px 0;
        border-bottom: 1px solid var(--light);
        position: relative;
    }

        .notification-item:last-child {
            border-bottom: none;
        }

        .notification-item.unread {
            background-color: rgba(74, 144, 226, 0.05);
        }

            .notification-item.unread::before {
                content: '';
                position: absolute;
                left: -10px;
                top: 50%;
                transform: translateY(-50%);
                width: 6px;
                height: 6px;
                border-radius: 50%;
                background-color: var(--primary);
            }

    .notification-content {
        margin: 0;
    }

    .notification-time {
        margin: 5px 0 0;
        font-size: 12px;
        color: #777;
    }

    /* User Info Styles */
    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 15px;
    }

    .info-item {
        margin-bottom: 15px;
    }

    .info-label {
        font-weight: 600;
        color: var(--dark);
        margin-bottom: 5px;
    }

    .info-data {
        color: #555;
    }

    .sensitive-data {
        filter: blur(5px);
        transition: filter 0.3s;
    }

        .sensitive-data:hover {
            filter: blur(0);
        }

    .blood-donation-status {
        margin-top: 15px;
        padding: 15px;
        background-color: rgba(231, 76, 60, 0.05);
        border-left: 4px solid var(--danger);
        border-radius: 4px;
    }

    .action-buttons {
        margin-top: 20px;
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: var(--primary);
        color: white;
    }

        .btn-primary:hover {
            background-color: #3a7bbf;
        }

    .btn-secondary {
        background-color: var(--light);
        color: var(--dark);
    }

        .btn-secondary:hover {
            background-color: #d6dbdd;
        }

    .btn-success {
        background-color: var(--secondary);
        color: white;
    }

        .btn-success:hover {
            background-color: #27ae60;
        }
    /* Statistics Card */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
    }

    .stat-item {
        background-color: rgba(74, 144, 226, 0.1);
        border-radius: 6px;
        padding: 15px;
        text-align: center;
    }

    .stat-value {
        font-size: 24px;
        font-weight: bold;
        color: var(--primary);
        margin: 0 0 5px;
    }

    .stat-label {
        font-size: 14px;
        color: #555;
        margin: 0;
    }

</style>

<div class="dashboard-container">
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-profile">
            <div class="profile-avatar">
                @(Model?.FullName?.Length > 0 ? Model.FullName.Substring(0, 1) : "U")
            </div>
            <h3>@Model?.FullName</h3>
            <p>@Model?.Email</p>
            <span class="badge @(Model?.IsActive == true ? "badge-success" : "badge-primary")">
                @(Model?.IsActive == true ? "Active" : "Inactive")
            </span>
        </div>
        <div class="sidebar-menu">
            <a href="#" class="menu-item active">
                <i class="fas fa-home"></i> Dashboard
            </a>
            <a href="#" class="menu-item">
                <i class="fas fa-user"></i> My Profile
            </a>
            <a href="#" class="menu-item">
                <i class="fas fa-calendar-alt"></i> Appointments
            </a>
            <a href="#" class="menu-item">
                <i class="fas fa-tint"></i> Donation History
            </a>
            <a href="#" class="menu-item">
                <i class="fas fa-bell"></i> Notifications
            </a>
            <a href="#" class="menu-item">
                <i class="fas fa-cog"></i> Settings
            </a>
         @*    <a href="#" class="menu-item">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a> *@
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="dashboard-header">
            <div class="dashboard-title">
                <h1>Welcome back, @(Model?.FullName?.Split(' ').FirstOrDefault())</h1>
            </div>
            <div style="display: flex; align-items: center;">
                <div class="notification-bell">
                    <i class="fas fa-bell" style="font-size: 20px;"></i>
                    <span class="notification-count">3</span>
                </div>
                <a asp-action="Index" asp-controller="Appointments" class="btn btn-primary">
                    <i class="fas fa-plus"></i> New Appointment
                </a>
            </div>
        </div>

        <!-- Dashboard Cards -->
        <div class="dashboard-cards">
            <!-- Upcoming Appointments Card -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h2 class="card-title">Upcoming Appointments</h2>
                    <a href="#" class="btn btn-secondary">View All</a>
                </div>
                <div class="appointment-list">
                    <div class="appointment-item">
                        <div class="appointment-details">
                            <h4 class="appointment-title">Blood Donation</h4>
                            <p class="appointment-time">Tomorrow, 10:00 AM</p>
                        </div>
                        <span class="appointment-status status-confirmed">Confirmed</span>
                    </div>
                    <div class="appointment-item">
                        <div class="appointment-details">
                            <h4 class="appointment-title">Medical Check-up</h4>
                            <p class="appointment-time">March 20, 2025, 2:30 PM</p>
                        </div>
                        <span class="appointment-status status-pending">Pending</span>
                    </div>
                    <div class="appointment-item">
                        <div class="appointment-details">
                            <h4 class="appointment-title">Follow-up Visit</h4>
                            <p class="appointment-time">April 5, 2025, 11:15 AM</p>
                        </div>
                        <span class="appointment-status status-pending">Pending</span>
                    </div>
                </div>
            </div>

            <!-- Notifications Card -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h2 class="card-title">Notifications</h2>
                    <a href="#" class="btn btn-secondary">Mark All Read</a>
                </div>
                <div class="notification-list">
                    <div class="notification-item unread">
                        <p class="notification-content">Your appointment has been confirmed for tomorrow at 10:00 AM.</p>
                        <p class="notification-time">2 hours ago</p>
                    </div>
                    <div class="notification-item unread">
                        <p class="notification-content">Urgent: Blood donation needed for blood group @Model?.BloodGroupId in your area.</p>
                        <p class="notification-time">Yesterday</p>
                    </div>
                    <div class="notification-item unread">
                        <p class="notification-content">Your last donation was 3 months ago. You are now eligible to donate again.</p>
                        <p class="notification-time">2 days ago</p>
                    </div>
                </div>
            </div>

            <!-- Blood Donation Stats -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h2 class="card-title">Donation Statistics</h2>
                </div>
                <div class="stats-grid">
                    <div class="stat-item">
                        <h3 class="stat-value">5</h3>
                        <p class="stat-label">Total Donations</p>
                    </div>
                    <div class="stat-item">
                        <h3 class="stat-value">2.5L</h3>
                        <p class="stat-label">Blood Donated</p>
                    </div>
                    <div class="stat-item">
                        <h3 class="stat-value">3</h3>
                        <p class="stat-label">Lives Saved</p>
                    </div>
                    <div class="stat-item">
                        <h3 class="stat-value">42</h3>
                        <p class="stat-label">Days Since Last</p>
                    </div>
                </div>
                <div class="blood-donation-status">
                    <p><strong>Next eligible donation date:</strong> April 15, 2025</p>

                </div>
            </div>

            <!-- User Profile Information -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h2 class="card-title">Personal Information</h2>
                    <a href="#" class="btn btn-secondary">Edit</a>
                </div>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Full Name</div>
                        <div class="info-data">@Model?.FullName</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Email</div>
                        <div class="info-data">@Model?.Email</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Phone Number</div>
                        <div class="info-data">@Model?.PhoneNumber</div>
                    </div>
                    <div class="info-item" hidden>
                        <div class="info-label">Blood Group</div>
                        <div class="info-data">@Model?.BloodGroupId</div>
                    </div>
                    <div class="info-item" hidden>
                        <div class="info-label">State</div>
                        <div class="info-data">@Model?.StateId</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Pin Code</div>
                        <div class="info-data">@Model?.PinCode</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Emergency Requests Section -->
        <div class="dashboard-card">
            <div class="card-header">
                <h2 class="card-title">Nearby Blood Requests</h2>
                <a href="#" class="btn btn-secondary">View All</a>
            </div>
            <div class="appointment-list">
                <div class="appointment-item">
                    <div class="appointment-details">
                        <h4 class="appointment-title">Emergency Request - Blood Group @Model?.BloodGroupId</h4>
                        <p class="appointment-time">City Hospital (5km away) • Needed within 24 hours</p>
                    </div>
                    <a href="#" class="btn btn-primary">Respond</a>
                </div>
                <div class="appointment-item">
                    <div class="appointment-details">
                        <h4 class="appointment-title">Platelets Needed - Compatible with @Model?.BloodGroupId</h4>
                        <p class="appointment-time">Memorial Hospital (12km away) • Needed within 48 hours</p>
                    </div>
                    <a href="#" class="btn btn-primary">Respond</a>
                </div>
            </div>
        </div>
        <br>
        <br>
        
        <!-- Donation History -->
        <div class="dashboard-card">
            <div class="card-header">
                <h2 class="card-title">Recent Donations</h2>
                <a href="#" class="btn btn-secondary">Full History</a>
            </div>
            <div class="appointment-list">
                <div class="appointment-item">
                    <div class="appointment-details">
                        <h4 class="appointment-title">Whole Blood Donation</h4>
                        <p class="appointment-time">January 30, 2025 • City Blood Bank</p>
                    </div>
                    <span class="appointment-status status-completed">Completed</span>
                </div>
                <div class="appointment-item">
                    <div class="appointment-details">
                        <h4 class="appointment-title">Platelet Donation</h4>
                        <p class="appointment-time">November 15, 2024 • Memorial Hospital</p>
                    </div>
                    <span class="appointment-status status-completed">Completed</span>
                </div>
            </div>
        </div>
    </div>
</div>

