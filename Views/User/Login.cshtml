@model BBMSDATA1.Models.LoginRequest
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-center py-3" style="background-color: #f44336; color: white; border-top-left-radius: 15px; border-top-right-radius: 15px;">
                    <h3 class="mb-0">Login</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Username" class="form-label fw-semibold">Username</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-person-fill"></i>
                                </span>
                                <input asp-for="Username" class="form-control rounded-end border-start-0 ps-0"
                                       placeholder="Enter your username" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label fw-semibold">Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-lock-fill"></i>
                                </span>
                                <input asp-for="Password" class="form-control rounded-end border-start-0 ps-0"
                                       placeholder="Enter your password" type="password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mb-4">
                            <div class="form-check">
                                @* <input class="form-check-input" type="checkbox" id="rememberMe">
                                <label class="form-check-label small" for="rememberMe">
                                    Remember me
                                </label> *@
                            </div>
                            <a href="#" class="small text-decoration-none" style="color: #f44336;">Forgot Password?</a>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn py-2 fw-bold"
                                    style="background-color: #f44336; color: white; border-radius: 30px;">
                                Login
                            </button>
                        </div>

                    </form>

            
                </div>
                <div class="card-footer text-center py-3"
                     style="background-color: #f8f9fa; border-bottom-left-radius: 15px; border-bottom-right-radius: 15px;">
                    <span class="text-muted">Don't have an account?</span>
                    <a asp-controller="User" asp-action="Register" class="text-decoration-none ms-1"
                       style="color: #f44336; font-weight: 600;">Sign Up</a>
                </div>

               
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}