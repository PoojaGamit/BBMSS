<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Blood Donation Center</title>

	<!-- Bootstrap 5 CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

	<!-- Font Awesome -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

	<style>
		:root {
			--primary-color: #f44336;
			--secondary-color: #212529;
		}

		body {
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			background-color: #f4f6f9;
		}

		.hero-section {
			background: linear-gradient(rgba(244, 67, 54, 0.8), rgba(244, 67, 54, 0.8)), url('https://images.unsplash.com/photo-1615461469775-55103de93a7d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80');
			background-size: cover;
			background-position: center;
			color: white;
			padding: 6rem 0;
		}

		.notification-banner {
			background-color: #ffeb3b;
			color: #212529;
			padding: 1rem;
			text-align: center;
			font-weight: bold;
		}

		.statistics-card {
			transition: transform 0.3s ease;
		}

			.statistics-card:hover {
				transform: scale(1.05);
			}

		.blood-compatibility-section {
			background-color: white;
			border-radius: 10px;
			box-shadow: 0 4px 6px rgba(0,0,0,0.1);
			padding: 2rem;
			margin-top: 2rem;
		}

		.blood-table {
			border-radius: 10px;
			overflow: hidden;
		}

			.blood-table thead {
				background-color: var(--primary-color);
				color: white;
			}

			.blood-table tr:nth-child(even) {
				background-color: #f9f9f9;
			}

		.donate-btn {
			background-color: var(--primary-color);
			border: none;
			transition: all 0.3s ease;
		}

			.donate-btn:hover {
				background-color: #d32f2f;
				transform: translateY(-3px);
				box-shadow: 0 4px 6px rgba(0,0,0,0.2);
			}

		.footer {
			background-color: var(--secondary-color);
			color: white;
			padding: 2rem 0;
		}
	</style>
</head>
<body>

	<div class="notification-banner">
		<i class="fas fa-bell me-2"></i>Latest Notification: Blood Donation Drive Ends Soon! Register Now!
	</div>
	<section class="hero-section text-center text-white">
		<div class="container">
			<h1 class="display-4 fw-bold mb-3">Give the Gift of Life</h1>
			<p class="lead mb-4">"Your single donation can save up to three lives"</p>
			<a href="#" class="btn btn-light btn-lg donate-btn">
				<i class="fas fa-heart me-2"></i>Donate Now
			</a>
		</div>
	</section>
	<section class="container my-5">
		<div class="row">
			<div class="col-md-6 mb-4">
				<div class="card statistics-card bg-primary text-white p-4 h-100">
					<div class="card-body text-center">
						<h3 class="display-5">6,846,609</h3>
						<p class="h5">Donors Registered</p>
					</div>
				</div>
			</div>
			<div class="col-md-6 mb-4">
				<div class="card statistics-card bg-info text-white p-4 h-100">
					<div class="card-body text-center">
						<h3 class="display-5">7,157,402</h3>
						<p class="h5">Blood Units Collected</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	
	<section class="container">
		<div class="blood-compatibility-section">
			<h2 class="text-center mb-4" style="color: var(--primary-color);">
				<i class="fas fa-tint me-2"></i>Blood Type Compatibility
			</h2>

			<div class="table-responsive">
				<table class="table blood-table">
					<thead>
						<tr>
							<th>Blood Type</th>
							<th>Can Donate To</th>
							<th>Can Receive From</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>A+</td>
							<td>A+ AB+</td>
							<td>A+ A- O+ O-</td>
						</tr>
						<tr>
							<td>A-</td>
							<td>A+ A-</td>
							<td>A- O-</td>
						</tr>
						<tr>
							<td>B+</td>
							<td>B+ AB+</td>
							<td>B+ B- O+ O-</td>
						</tr>
						<tr>
							<td>B-</td>
							<td>B+ B-</td>
							<td>B- O-</td>
						</tr>
						<tr>
							<td>O+</td>
							<td>O+ A+ B+ AB+</td>
							<td>O+ O-</td>
						</tr>
						<tr>
							<td>O-</td>
							<td>All blood types</td>
							<td>O-</td>
						</tr>
						<tr>
							<td>AB+</td>
							<td>AB+</td>
							<td>All blood types</td>
						</tr>
						<tr>
							<td>AB-</td>
							<td>AB+ AB-</td>
							<td>A- B- O- AB-</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</section>

	<section class="container my-5">
		<div class="card">
			<div class="card-header bg-primary text-white">
				<h3 class="mb-0">
					<i class="fas fa-bell me-2"></i>Recent Notifications
				</h3>
			</div>
			<div class="card-body">
				<div class="list-group" id="notificationList">
					<p class="text-muted">Loading notifications...</p>
				</div>
			</div>
		</div>
	</section>

	
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script>
		$(document).ready(function () {
			$.ajax({
				url: "https://localhost:7193/Notification/GetActiveNotifications",
				type: "GET",
				success: function (data) {
					var notificationList = $("#notificationList");
					notificationList.empty();

					if (data.length === 0) {
						notificationList.append('<p class="text-muted">No notifications available.</p>');
						return;
					}

						   data.forEach(function (notification) {
			console.log(notification); // Debugging

			var title = notification.Title || notification.title || "No Title";
			var startDate = notification.StartDate || notification.startDate || "N/A";
			var message = notification.Message || notification.message || "No message";

			var notificationItem = `
				<a href="#" class="list-group-item list-group-item-action">
					<div class="d-flex w-100 justify-content-between">
						<h5 class="mb-1">${title}</h5>
						<small class="text-muted">${startDate}</small>
					</div>
					<p class="mb-1">${message}</p>
				</a>`;
			$("#notificationList").append(notificationItem);
		});

				},
				error: function () {
					$("#notificationList").html('<p class="text-danger">Failed to load notifications.</p>');
				}
			});
		});
	</script>

</body>
</html>